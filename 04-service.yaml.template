---
apiVersion: v1
kind: Service
metadata:
  name: gitea-service
  namespace: gitea
spec:
  type: NodePort
  selector:
    app: gitea
  ports:
    - name: http
      protocol: TCP
      port: 3000
      targetPort: 3000
      nodePort: 30040
    - name: ssh
      protocol: TCP
      port: 22
      targetPort: 22
      nodePort: 30041

