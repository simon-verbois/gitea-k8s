---
apiVersion: networking.k8s.io/v1
kind: Ingress
metadata:
  name: gitea-ingress
  namespace: gitea
  annotations:
    traefik.ingress.kubernetes.io/router.tls.certresolver: your-certresolver-name # <-- Add your TLS resolver name
spec:
  rules:
  - host: "gitea.your-domain.com" # <-- Add you own domain
    http:
      paths:
      - path: /
        pathType: Prefix
        backend:
          service:
            name: gitea-service
            port:
              name: http
  tls:
  - hosts:
    - "gitea.your-domain.com" # <-- Add you own domain
