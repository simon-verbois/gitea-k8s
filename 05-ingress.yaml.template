# This IngressRoute is more secure than the default ingress
# To use this IngressRoute, please refer to: https://github.com/simon-verbois/microk8s-config-traefik/tree/main
---
apiVersion: traefik.io/v1alpha1
kind: IngressRoute
metadata:
  name: gitea-ingressroute
  namespace: gitea
spec:
  entryPoints:
    - websecure
  routes:
    - match: Host(`gitea.example.org`)
      kind: Rule
      services:
        - name: gitea-service
          port: http
      middlewares:
        - name: coraza-waf
          namespace: traefik
        - name: security-headers
          namespace: traefik
        - name: geoblock
          namespace: traefik
  tls:
    certResolver: ovhresolver
    domains:
      - main: "gitea.example.org"
    options:
      name: tls-profile
      namespace: traefik

